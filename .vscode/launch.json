    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "go",
            "mode": "auto",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "buildFlags": "-ldflags=-X=github.com/stateful/runme/internal/version.BuildVersion=99.9.9",
        },
        {
            "name": "Debug server",
            "type": "go",
            "mode": "auto",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "buildFlags": "-ldflags=-X=github.com/stateful/runme/internal/version.BuildVersion=99.9.9",
            "args": [
                "server",
                "--dev",
                "--address",
                "127.0.0.1:9999",
                "--tls",
                "/tmp/runme/tls",
            ]
        },
        {
            "name": "Connect to dlv",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}/main.go",
            "port": 56379,
            "host": "127.0.0.1"
        },
    ]
}
